<html>
    <head>


        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Damion&family=Monoton&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="css/sign-up.css" type="text/css">


        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <title>Sign-Up</title>

    </head>
    <body>
        <script>
        
            let flashSucc = '<%= flash.success %>';
            
             
             if( flashSucc){
                new Noty({
                    theme: 'mint',
                    text : flashSucc,
                    type: 'success',
                    layout : 'topRight',
                    timeout: 10000,
                    progressBar:true,
                }).show();       
            } 
    
    
            let flasherr = '<%= flash.error %>';
            
    
             if(flasherr){
                new Noty({
                    theme: 'mint',
                    text: flasherr,
                    type : "error",
                    layout : 'topRight',
                    timeout: 5000,
                    progressBar:true,
                }).show();
            } 
                    
                
        
        
        </script>
        



        <!-- <% if(flash.success){%>
            <h1>
                <%= flash.success%>   
            </h1> 
        <%}%>
        <% if( flash.error){%>
            <h1>
                <%= flash.error%>
            </h1>
        <%}%> -->
        <main>
            <div id="content">
                <h2>
                    <div>
                        <a href="/profile">Travel EX</a>
                        
                    </div>
                    Sign-Up to share Your travel journey
                     
                </h2>
                <form action="/create/sign-up" method="post">
                    <input type="text" name="name" placeholder="Name" required>
                    <input type="email" name="email" placeholder="Email" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <input type="password" name="con_password" placeholder="Confirm password" required>
                    <input id ="sign-upbtn" type="submit" value="Sign-Up" style="cursor: pointer;">
                </form>
            </div>
            <div id="login">
                <h3>
                    Already have Account?
                    <a href="/sign-in">Sign In</a>
                </h3>
            </div>
        </main>





        
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    </body>
</html>